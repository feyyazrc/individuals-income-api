{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The individual's details for each income source",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "description": "A list of links for possible actions related to this endpoint.",
      "properties": {
        "self": {
          "type": "object",
          "description": "The Unique Resource Identifier (URI) for this endpoint.",
          "properties": {
            "href": {
              "type": "string",
              "description": "The URL of the endpoint",
              "example": "/individuals/income/sa/source?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430{&fromTaxYear,toTaxYear}"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    },
    "selfAssessment": {
      "type": "object",
      "description": "Self Assessment tax return history for a requested time period.",
      "properties": {
        "taxReturns": {
          "type": "array",
          "description": "The list of Self Assessment tax returns in the requested time period.",
          "items": {
            "type": "object",
            "properties": {
              "taxYear": {
                "type": "string",
                "description": "The tax year. Tax year in the format YYYY-YY",
                "example": "2018-19"
              },
              "sources": {
                "type": "array",
                "description": "A description and address for each income source, if known.",
                "items": {
                  "type": "object",
                  "properties": {
                    "businessDescription": {
                      "type": "string",
                      "description": "A description of the main business activity relating to the Self Assessment tax return."
                    },
                    "businessAddress": {
                      "type": "object",
                      "properties": {
                        "line1": {
                          "type": "string",
                          "description": "Address line 1."
                        },
                        "line2": {
                          "type": "string",
                          "description": "Address line 2."
                        },
                        "line3": {
                          "type": "string",
                          "description": "Address line 3."
                        },
                        "line4": {
                          "type": "string",
                          "description": "Address line 4."
                        },
                        "line5": {
                          "type": "string",
                          "description": "Address line 5."
                        },
                        "postalCode": {
                          "type": "string",
                          "description": "The postcode for the address."
                        }
                      }
                    },
                    "telephoneNumber": {
                      "type": "string",
                      "description": "The business telephone number. "
                    }
                  }
                }
              }
            },
            "required": [
              "taxYear",
              "sources"
            ]
          }
        }
      },
      "required": [
        "taxReturns"
      ]
    }
  },
  "required": [
    "_links",
    "selfAssessment"
  ]
}
